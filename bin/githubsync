#!/bin/sh
#
# wildefyr (c) 2016 CC
# lazily pull from github repos to personal ones

GITROOT="/builds/git"

test -d "$GITROOT" && {
    cd "$GITROOT"

    test ! -z "$(find $GITROOT -type d | sed '1d')" && {
        for dir in */; do
            cd "$dir"
            git pull origin master
            cd ../
        done
    }
}
