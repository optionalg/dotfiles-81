#!/bin/sh
#
# wildefyr - 2016 (c) wtfpl
# wrapper script around xscreenshot and ff2png

fnmatch() {
    case "$2" in
        $1) return 0 ;;
        *)  printf '%s\n' "Please enter a valid window id."; exit 1 ;;
    esac
}

img=${img:-./shot}

test ! -z $1 && {
    fnmatch '0x*' "$1" && {
        xscreenshot "$1" | ff2png > "${img}.png"
    }
} || {
    xscreenshot | ff2png > "${img}.png"
}
