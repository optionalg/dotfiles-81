#!/bin/sh
#
# wildefyr - 2016 (c) wtfpl
# mass process video urls for youtube-dl

ARGS="$@"

URLS=""

usage() {
    cat << EOF
usage $(basename $0) [directory]
EOF
    
    test -z $1 || exit $1
}

main() {
    test -z $1 && {
        directory="./"
    } || {
        directory=$1
    }

    for i in $URLS; do
        youtube-dl $i --no-playlist -o "$directory /%(title)s"
    done
}

main $ARGS
