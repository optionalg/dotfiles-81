#!/bin/sh

clear

wild="$(curl -sL https://tmi.twitch.tv/group/user/wildefyr/chatters)"

viewers=$(printf '%s\n' "$wild" | jq -r '.chatter_count' | sed 's/"//g; s/\ //g')
viewers=$(($viewers - 1))

test "$viewers" -eq 0 && {
    sleep 10
    continue
}

printf '\n'

printf '%s\n' "$viewers on wildefyr!"
printf '%s' "$wild" | jq '.chatters.viewers' | sed '1d; $d' | \
    tr '\n' '\f' | sed 's/"//g' | tr '\f' '\n'

printf '\n'
