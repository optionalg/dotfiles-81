#!/bin/sh

DOTS="$HOME/.dotfiles"

type toilet 2>&1 > /dev/null && {
    case $1 in
        3d)  toilet -f term -w 200 -t --gay < $DOTS/bin/.fyr2 ;;
        *)   toilet -f term -w 200 -t --gay < $DOTS/bin/.fyr  ;;
    esac
} || {
    case $1 in
        3d)  cat $DOTS/bin/.fyr2 ;;
        *)   cat $DOTS/bin/.fyr  ;;
    esac
}
